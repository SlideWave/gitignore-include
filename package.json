{
	"name": "@slidewave/gitignore-include",
	"version": "0.0.0-dev",
	"description": "Processes include directives placed in gitignore and compatible files",
	"main": ".build/index.js",
	"typings": ".build/index.d.ts",
	"files": [
		".build/**/*"
	],
	"scripts": {
		"build": "npm run clean && tsc --project tsconfig.production.json",
		"clean": "npx -q rimraf .build",
		"lint": "eslint --max-warnings=0 '**'",
		"prepare": "patch-package && husky install",
		"prepublishOnly": "npm run lint && npm run build && npx -q shx chmod +x .build/gii*.js",
		"test": "mocha --exit --timeout 60000 --require ts-node/register --file src/test/beforeAll.ts src/**/*.test.ts",
		"test-build": "exit 0; mocha --exit --timeout 60000--file .build/test/beforeAll.js .build/**/*.test.js"
	},
	"bin": {
		"giiclean": ".build/giiclean.js",
		"giismudge": ".build/giismudge.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SlideWave/gitignore-include.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"keywords": [
		"gitignore",
		"prettierignore",
		"eslintignore",
		"includes",
		"include"
	],
	"author": "Ricky Curtice <kf6kjg@users.noreply.github.com> (http://rwcproductions.com)",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/SlideWave/gitignore-include/issues"
	},
	"homepage": "https://github.com/SlideWave/gitignore-include#readme",
	"engines": {
		"node": ">=14.18"
	},
	"dependencies": {
		"fast-glob": "^3.2.2",
		"follow-redirects": "^1.11.0",
		"minimist": "^1.2.5"
	},
	"devDependencies": {
		"@schemastore/package": "^0.0.6",
		"@types/chai": "^4.3.3",
		"@types/chai-as-promised": "^7.1.5",
		"@types/follow-redirects": "^1.8.0",
		"@types/minimist": "^1.2.2",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.7.16",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"chai": "^4.3.6",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-markdown": "^3.0.0",
		"eslint-plugin-yaml": "^0.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"mocha": "^10.0.0",
		"patch-package": "^6.4.7",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.3"
	}
}
